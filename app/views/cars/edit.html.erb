<%= form_for @car do |f| %>
  <div>
    <%= f.label :Brand %>
    <%= f.select :brand, [['TATA','TATA'],['KIA','KIA'],['MARUTI','MARUTI'],['MG','MG']] %><br />
  </div>

  <div>
    <%=f.label :Model %>
    <%= f.text_field :model %><br />
  </div>

  <div>
    <%=f.label :Price %>
    <%= f.text_field :price %><br />
  </div>

  <div>
    <%= f.label :manufacturing_year %>
    <%= f.select :manufacturing_year, (Date.today.year-20)..(Date.today.year-1), :selected => Time.current.year %>
  </div><br />

  <div>
    <%= f.label :varient, 'varient: ' %>
    <%= f.label :petrol %>
    <%= f.radio_button :varient, 'Petrol' %>
    <%= f.label :Diesel %>
    <%= f.radio_button :varient, 'Diesel' %> <br />
  </div>
  <div>
      <%= f.label :images %>
      <%= f.file_field :images, multiple: true %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>