          <%= image_tag car.images.first, width: "200px" ,height: "200px"%>
        <% end %>
      <%end%>
        <div class="card-body">
          Brand :<%= car.brand %><br>
          Model :<%= car.model %><br>
          Price :<%= car.price %><br>
          Manufacturing :<%=car.manufacturing_year%><br>
          Varient :<%=car.varient%><br>
        </div>
        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
          <%= link_to "For Enquiry", new_enquiry_path(car_id: car.id), class:"btn btn-danger"%>
