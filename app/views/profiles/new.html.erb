<h2>Welcome to Boothouse</h2>

<%= form_for @profile do |f| %>
    <div>
        <%= f.label :first_name  %>
        <%= f.text_field :first_name %><br /><br />
    </div>
    <div>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %><br /><br />
    </div>
    <div>
        <%= f.label :gender, 'gender: ' %>
        <%= f.label :Male %>
        <%= f.radio_button :gender, 'Male' %>
        <%= f.label :Female %>
        <%= f.radio_button :gender, 'Female' %> <br /><br />
    </div>
    <div>
        <%= f.label :age %>
        <%= f.text_field :age %><br /><br />
    </div>

    <div>
        <%= f.label :house_no %>
        <%= f.text_field :house_no %><br /><br />
    </div>
    <div>
        <%= f.label :street %>
        <%= f.text_field :street %><br /><br />
    </div>
    <div>
        <%= f.label :city %>
        <%= f.text_field :city %><br /><br />
    </div>
    <div>
        <%= f.label :state %>
        <%= f.text_field :state %><br /><br />
    </div>
    <div>
        <%= f.label :country %>
        <%= f.text_field :country %><br /><br />
    </div>
    <div>
        <%= f.label :pincode %>
        <%= f.text_field :pincode %><br /><br />
    </div>
    <div>
        <%= f.submit %>
    </div>  
<% end %>
