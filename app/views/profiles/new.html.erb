<form class="form-horizontal center bg-light" role="form">
    <h1><b>Welcome to Boothouse</b></h1>

  <%= form_for @profile do |f| %>
    <div class="field">
        <%= f.label :first_name, "First name:", class: "col-md-4 control-label"   %>
        <%= f.text_field :first_name %><br /><br />
    </div>
    <div class="field">
        <%= f.label :last_name , "Last name:", class: "col-md-4 control-label" %>
        <%= f.text_field :last_name %><br /><br />
    </div>
    <div class="field">
        <%= f.label :gender, 'gender: %>
        <%= f.label :Male %>
        <%= f.radio_button :gender, 'Male' %>
        <%= f.label a:Female %>
        <%= f.radio_button :gender, 'Female' %> <br /><br />
    </div>
    <div class="field">
        <%= f.label :age %>
        <%= f.text_field :age %><br /><br />
    </div>

    <div class="field">
        <%= f.label :house_no %>
        <%= f.text_field :house_no %><br /><br />
    </div>
    <div class="field">
        <%= f.label :street %>
        <%= f.text_field :street %><br /><br />
    </div>
    <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city %><br /><br />
    </div>
    <div class="field">
        <%= f.label :state %>
        <%= f.text_field :state %><br /><br />
    </div>
    <div class="field">
        <%= f.label :country %>
        <%= f.text_field :country %><br /><br />
    </div>
    <div class="field">
        <%= f.label :pincode %>
        <%= f.text_field :pincode %><br /><br />
    </div>
    <div class="field">
        <%= f.submit%>
    </div>  
<% end %>


<%=button_to 'Back', products_path%>