<center><form class="form-horizontal center bg-light" role="form">
<h2>Welcome to Boothouse</h2>

<%= form_for @profile do |f| %>
    <div class="field">
        <%= f.label :first_name, "First name:", class: "col-md-2 control-label"   %>
        <%= f.text_field :first_name %><br /><br />
    </div>
    <div class="field">
        <%= f.label :last_name , "Last name:", class: "col-md-2 control-label" %>
        <%= f.text_field :last_name %><br /><br />
    </div>
    <div class="field">
        <%= f.label :gender,'Gender', class: "col-md-1 control-label" %>
        <%= f.label :Male %>
        <%= f.radio_button :gender, 'Male', :checked => true, class: "col-md-1 control-label" %>
        <%= f.label :Female %>
        <%= f.radio_button :gender, 'Female', :checked => true, class: "col-md-1 control-label" %> <br /><br />
    </div>
    <div class="field">
        <%= f.label :age, "Age:", class: "col-md-2 control-label" %>
        <%= f.text_field :age %><br /><br />
    </div>

    <div class="field">
        <%= f.label :house_no,"House no.:", class: "col-md-2 control-label"%>
        <%= f.text_field :house_no %><br /><br />
    </div>
    <div class="field">
        <%= f.label :street,"Street:", class: "col-md-2 control-label" %>
        <%= f.text_field :street %><br /><br />
    </div>
    <div class="field">
        <%= f.label :city, "City:", class: "col-md-2 control-label" %>
        <%= f.text_field :city %><br /><br />
    </div>
    <div class="field">
        <%= f.label :state, "State:", class: "col-md-2 control-label" %>
        <%= f.text_field :state %><br /><br />
    </div>
    <div class="field">
        <%= f.label :country, "Country:", class: "col-md-2 control-label" %>
        <%= f.text_field :country %><br /><br />
    </div>
    <div class="field">
        <%= f.label :pincode, "Pincode:", class: "col-md-2 control-label" %>
        <%= f.text_field :pincode %><br /><br />
    </div>
    <div class="field">
        <div class="col-md-4">
            <%= f.submit  nil ,class: 'btn btn-outline-dark'  %>
        </div>
    </div>  
<% end %>
</form>
</center>

<%=link_to "Back", products_path%>