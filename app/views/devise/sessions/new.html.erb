<center>
  <div class="form-outline mb-4">
    <div class="col-md-4 mb-3">
    <%= link_to raw("<i class=\"icon-search icon-white\">Log in</i>"), 
           new_session_path(resource_name), class: "btn btn-outline-dark"%>
    <%= link_to raw("<i class=\"icon-search icon-white\">Sign up</i>"), 
           new_registration_path(resource_name), class: "btn btn-dark"%>
    </div>
  </div>
  <div id="log_in">
  <h2>Log in</h2><br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-outline mb-4">
         <div class="col-md-4 mb-3">
         <label class="form-label" for="loginName">Email or Mobile</label>
      <%= f.text_field :login, class:"form-control" %>
      </div>
    </div>

    <div class="form-outline mb-4">
      <div class="col-md-4 mb-3">
      <%= f.label :password, class:"form-label", for:"loginPassword"%>
      <%= f.password_field :password, class:"form-control" %>
      <div>
    </div>

      <div class="form- mb-4">
        <% if devise_mapping.rememberable? %> 
          <%= f.label :remember_me %> 
          <%= f.check_box :remember_me %>
        </div>
    </div>
      <% end %>

    <div class="form-outline mb-4">
      <div class="col">
      <%= link_to "Forgot password?", new_password_path(resource_name)%>   
      </div>
    </div>

      <%= f.submit "Log in", class: "btn btn-dark" %>
    
    <div class="form-outline mb-4">
      <div class="col-md-4 mb-3">
        <p class="text-center text-muted">OR</p>
    </div>
    <div class="form-outline mb-4">
    <div class="col-md-4 mb-3">
    <%= link_to raw("<i class=\"icon-search icon-white\">Continue with Facebook </i>"), 
           user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-outline-dark"%>
    <%= link_to raw("<i class=\"icon-search icon-white\">Continue with Google</i>"), 
           user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-dark"%>
    <%= link_to raw("<i class=\"icon-search icon-white\">Continue with LinkedIn </i>"), 
           user_linkedin_omniauth_authorize_path, method: :post, class: "btn btn-outline-dark"%>
    </div>
    </div>
  </div>
  <% end %>
</div>








  <%= render "devise/shared/links" %>
